<div class='row'>
  <div class='col-lg-12 text-center'>
    <% if gallery.images.select(&:persisted?).present? %>
      <div class='row'>
        <% gallery.images.each do |image| next if image.new_record? %>
          <div class='col-sm-6 col-md-4'>
            <div class='thumbnail'>
              <%= image_tag image.file.url(:medium), class: 'img-resize' %>

              <div class='caption m-t-md'>
                <p class='text-center'>
                  <%= link_to image, class: 'btn btn-default' do %>
                    <i class='fa fa-pencil'></i> Edit
                  <% end %>

                  <%= link_to image, method: :delete, class: 'btn btn-danger', data: { confirm: 'You sure?' } do %>
                    <i class='fa fa-trash'></i> Delete
                  <% end %>
                </p>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    <% else %>
      <h5>No images in your gallery.</h5>
    <% end %>
  </div>
</div>
